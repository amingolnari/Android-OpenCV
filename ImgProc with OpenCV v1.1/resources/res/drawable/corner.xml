<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#c70100"/>
            <gradient android:startColor="#c7999999" android:endColor="#c7999999" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#c40000"/>
            <solid android:color="#c40000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#ed0000"/>
            <gradient android:startColor="#1a0000" android:endColor="#1a0000" android:angle="-90"/>
        </shape>
    </item>
</selector>
